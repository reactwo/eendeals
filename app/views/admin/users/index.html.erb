<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Home</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_users_path %>">Users</a></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="element-wrapper"><h6 class="element-header">Users</h6>

            <%= render 'layouts/flash' %>

            <div class="element-box">
              <h5 class="form-header">Users List</h5>
              <div class="form-desc">
                <%= link_to 'New User', admin_new_user_path, class: 'mr-2 mb-2 btn btn-outline-primary' %>
                <%= link_to 'Wallets CSV', admin_upload_csv_wallet_path, class: 'mr-2 mb-2 btn btn-outline-primary' %>
                <%= link_to 'Daily Wallets CSV', admin_upload_daily_csv_wallet_path, class: 'mr-2 mb-2 btn btn-outline-primary' %>
                <%= link_to 'Khabri Ustad CSV', admin_upload_khabri_wallet_path, class: 'mr-2 mb-2 btn btn-outline-primary' %>
              </div>
              <div class="table-responsive">
                <table id="users-table" width="100%" class="table table-striped table-lightfont" data-source="<%= admin_users_path %>">
                  <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Refer ID</th>
                    <th>Direct</th>
                    <th>Upline</th>
                    <th>DOJ</th>
                    <th>Balance</th>
                    <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="display-type"></div>
</div>
</body>