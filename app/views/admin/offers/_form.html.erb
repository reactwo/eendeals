<%
  url = @offer.new_record? ? admin_offers_path : admin_offer_path(@offer)
%>
<%= form_for @offer, url: url do |f| %>
  <h5 class="form-header">New Offer</h5>

  <% if @offer.errors.full_messages.count > 0 %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <% @offer.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label for="offer_company_id">Company ID</label>
        <%= f.text_field :company_id, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :link %>
        <%= f.text_field :link, class: 'form-control', autocomplete: 'off' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.text_field :amount, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :instructions %>
    <%= f.text_area :instructions, class: 'form-control' %>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :logo %>
        <%= f.file_field :logo, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :cap %>
        <%= f.text_field :cap, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-check">
        <label class="form-check-label">
          <%= f.check_box :active, class: 'form-check-input' %>
          Active
        </label>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-check">
        <label class="form-check-label">
          <%= f.check_box :reward_later, class: 'form-check-input' %>
          Reward Later?
        </label>
      </div>
    </div>
  </div>

  <div class="form-buttons-w">
    <button class="btn btn-primary" type="submit"> Submit</button>
  </div>
<% end %>