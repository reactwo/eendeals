<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Home</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_redeems_path %>">Redeem Requests</a></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="element-wrapper"><h6 class="element-header">Redeem Requests</h6>
            <div class="element-box">
              <h5 class="form-header">Redeem Requests List</h5>

              <%= form_for 'redeem' do |f| %>
                <div class="form-group">
                  <%= f.label :date_range %>
                  <%= f.text_field :date_range, class: 'form-control daterange' %>
                </div>

                <div class="form-group">
                  <%= f.label :status %>
                  <%= f.collection_select :status, Redeem::STATUS_REVERSE, :first, :second, {}, { class: 'form-control' } %>
                </div>

                <div class="form-group">
                  <%= f.label :kind %>
                  <%= f.collection_select :kind, Redeem::KIND_REVERSE, :first, :second, {}, { class: 'form-control' } %>
                </div>

                <div class="form-buttons-w">
                  <button class="btn btn-primary" type="submit"> Submit</button>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="display-type"></div>
</div>
</body>