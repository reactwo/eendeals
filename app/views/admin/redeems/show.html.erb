<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Admin</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_redeems_path %>">Redeems</a></li>
        <li class="breadcrumb-item"><span>Redeem</span></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="row">
            <div class="col-sm-12">
              <div class="element-wrapper">
                <h6 class="element-header">Redeem</h6>
                <%= render 'layouts/flash' %>

                <div class="element-box">
                  <h5 class="form-header">Redeem Details</h5>
                  <div class="form-desc">
                    <%= link_to 'Approve', admin_approve_redeem_path(@redeem), method: :post, remote: true, class: 'btn btn-success' %>
                    <%= link_to 'Decline', admin_decline_reason_redeem_path(@redeem), class: 'btn btn-danger' %>
                  </div>

                  <div class="table-responsive">
                    <table class="table table-striped table-lightfont">

                      <tr>
                        <th>ID</th>
                        <td><%= @redeem.id %></td>
                      </tr>

                      <tr>
                        <th>Mode</th>
                        <td><%= Redeem::KIND_REVERSE[@redeem.kind] %></td>
                      </tr>

                      <tr>
                        <th>Name</th>
                        <td><%= @redeem.name %></td>
                      </tr>

                      <tr>
                        <th>User</th>
                        <td><%= link_to @redeem.user.name, admin_user_path(@redeem.user) %></td>
                      </tr>

                      <tr>
                        <th>Mobile</th>
                        <td><%= @redeem.mobile %></td>
                      </tr>

                      <tr>
                        <th>Account No.</th>
                        <td><%= @redeem.account_no %></td>
                      </tr>

                      <tr>
                        <th>IFSC</th>
                        <td><%= @redeem.bank_name %></td>
                      </tr>

                      <tr>
                        <th>Swift Code</th>
                        <td><%= @redeem.swift_code %></td>
                      </tr>

                      <tr>
                        <th>Email</th>
                        <td><%= @redeem.email %></td>
                      </tr>

                      <tr>
                        <th>Status</th>
                        <td><%= Redeem::STATUS_REVERSE[@redeem.status] %></td>
                      </tr>

                      <tr>
                        <th>Coins</th>
                        <td><%= @redeem.coins %></td>
                      </tr>

                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>