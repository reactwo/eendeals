<%= form_for @transaction, url: '' do |f| %>
  <% if @transaction.errors.full_messages.count > 0 %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <% @transaction.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.text_field :amount, type: 'number', class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.collection_select :category, Transaction::CATEGORY_REVERSE, :first, :second, {}, { class: 'form-control', id: 'transaction-category-dynamic' } %>
      </div>
    </div>
  </div>

  <div class="form-group" id="custom-message" style="display: none;">
    <%= f.label :data %>
    <%= f.text_field :data, class: 'form-control' %>
  </div>

  <div class="form-buttons-w">
    <button class="btn btn-primary" type="submit"> Submit</button>
  </div>
<% end %>