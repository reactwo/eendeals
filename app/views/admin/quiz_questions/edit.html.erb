<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Admin</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_quiz_questions_path %>">Questions</a></li>
        <li class="breadcrumb-item"><span>Edit Question</span></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="row">
            <div class="col-sm-12">
              <div class="element-wrapper">
                <div class="element-box">
                  <%= form_for @quiz_question, url: admin_quiz_question_path(@quiz_question) do |f| %>
                    <h5 class="form-header">Edit Question</h5>

                    <div class="form-group">
                      <%= f.label :question %>
                      <%= f.text_field :question, class: 'form-control' %>
                    </div>

                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <%= f.label :choice_1 %>
                          <%= f.text_field :choice_1, class: 'form-control' %>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-group">
                          <%= f.label :choice_2 %>
                          <%= f.text_field :choice_2, class: 'form-control' %>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <%= f.label :choice_3 %>
                          <%= f.text_field :choice_3, class: 'form-control' %>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-group">
                          <%= f.label :choice_4 %>
                          <%= f.text_field :choice_4, class: 'form-control' %>
                        </div>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= f.label :correct_choice %>
                      <%= f.collection_select :correct_choice, [1, 2, 3, 4], :to_s, :to_s, {}, class: 'form-control' %>
                    </div>

                    <div class="form-buttons-w">
                      <button class="btn btn-primary" type="submit"> Submit</button>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>