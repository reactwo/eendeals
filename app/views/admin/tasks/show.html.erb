<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Admin</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_tasks_path %>">Tasks</a></li>
        <li class="breadcrumb-item"><span>Task</span></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="row">
            <div class="col-sm-12">
              <div class="element-wrapper">
                <h6 class="element-header">Task</h6>

                <%= render 'layouts/flash' %>

                <div class="element-box">
                  <h5 class="form-header">Task Details</h5>
                  <div class="form-desc">
                    <%= link_to 'Edit', admin_edit_task_path(@task), class: 'mr-2 mb-2 btn btn-outline-info' %>
                    <%= link_to 'Delete', admin_task_path(@task), class: 'mr-2 mb-2 btn btn-outline-danger', method: :delete, data: { confirm: 'Are yous sure?' } %>
                  </div>.

                  <div class="table-responsive">
                    <table class="table table-striped table-lightfont">
                      <tr>
                        <th>Name</th>
                        <td><%= @task.name %></td>
                      </tr>

                      <tr>
                        <th>Link</th>
                        <td><%= @task.link %></td>
                      </tr>

                      <tr>
                        <th>Instructions</th>
                        <td><%= @task.instructions %></td>
                      </tr>

                      <tr>
                        <th>Amount</th>
                        <td><%= @task.amount %></td>
                      </tr>

                      <tr>
                        <th>Active</th>
                        <td><%= @task.active %></td>
                      </tr>

                      <tr>
                        <th>Cap</th>
                        <td><%= @task.cap %></td>
                      </tr>

                      <tr>
                        <th>Downloaded</th>
                        <td><%= @task.downloaded %></td>
                      </tr>

                      <tr>
                        <th>Picture Upload?</th>
                        <td><%= @task.picture_upload %></td>
                      </tr>

                      <tr>
                        <th>Run Days</th>
                        <td><%= @task.run_days %></td>
                      </tr>

                      <tr>
                        <th>Start Time</th>
                        <td><%= @task.start_time %></td>
                      </tr>

                      <tr>
                        <th>End Time</th>
                        <td><%= @task.end_time %></td>
                      </tr>

                      <tr>
                        <th>Slug</th>
                        <td><%= @task.slug %></td>
                      </tr>
                    </table>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>