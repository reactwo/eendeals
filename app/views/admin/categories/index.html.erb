<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Home</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_categories_path %>">Categories</a></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="element-wrapper">
            <h6 class="element-header">Categories</h6>

            <%= render 'layouts/flash' %>

            <div class="element-box">
              <h5 class="form-header">Categories List</h5>
              <div class="form-desc">
                <%= link_to 'New Category', admin_new_category_path, class: 'mr-2 mb-2 btn btn-outline-primary' %>
              </div>
              <div class="table-responsive">
                <table id="categories-table" width="100%" class="table table-striped table-lightfont" data-source="<%= admin_categories_path %>">
                  <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="display-type"></div>
</div>
</body>