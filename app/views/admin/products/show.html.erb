<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Admin</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_products_path %>">Products</a></li>
        <li class="breadcrumb-item"><span>Product</span></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="row">
            <div class="col-sm-12">
              <div class="element-wrapper">
                <h6 class="element-header">Product</h6>
                <%= render 'layouts/flash' %>

                <div class="element-box">
                  <h5 class="form-header">Products List</h5>
                  <div class="form-desc">
                    <%= link_to 'Edit', admin_edit_product_path(@product), class: 'mr-2 mb-2 btn btn-outline-info' %>
                    <%= link_to 'Delete', admin_product_path(@product), class: 'mr-2 mb-2 btn btn-outline-danger', method: :delete, data: { confirm: 'Are yous sure?' } %>
                  </div>.

                  <div class="table-responsive">
                    <table class="table table-striped table-lightfont">
                      <tr>
                        <th>Name</th>
                        <td><%= @product.name %></td>
                      </tr>
                      <tr>
                        <th>Price</th>
                        <td><%= @product.price %></td>
                      </tr>
                      <tr>
                        <th>Image</th>
                        <td><%= image_tag @product.image %></td>
                      </tr>
                      <tr>
                        <th>Description</th>
                        <td><%= @product.description %></td>
                      </tr>
                      <tr>
                        <th>Link</th>
                        <td><%= @product.link %></td>
                      </tr>
                      <tr>
                        <th>Active</th>
                        <td><%= @product.active %></td>
                      </tr>
                    </table>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>