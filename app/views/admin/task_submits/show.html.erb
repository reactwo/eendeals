<body>
<div class="all-wrapper menu-top">
  <div class="layout-w">

    <%= render 'layouts/header' %>

    <div class="content-w">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Admin</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_task_submits_path %>">Task Submissions</a></li>
        <li class="breadcrumb-item"><span>Task Submission</span></li>
      </ul>

      <div class="content-i">
        <div class="content-box">
          <div class="row">
            <div class="col-sm-12">
              <div class="element-wrapper">
                <h6 class="element-header">Task Submission</h6>
                <%= render 'layouts/flash' %>

                <div class="element-box">
                  <h5 class="form-header">Task Submission Details</h5>
                  <div class="form-desc">
                    <% if @task_submit.status === TaskSubmit::STATUS[:unapproved] %>
                      <%= link_to 'Approve', admin_task_submit_path(@task_submit), class: 'mr-2 mb-2 btn btn-outline-success', method: :post %>
                    <% else %>
                      <%= link_to 'Unapprove', admin_task_submit_path(@task_submit), class: 'mr-2 mb-2 btn btn-outline-danger', method: :patch, data: { confirm: 'Are you sure?' } %>
                    <% end %>
                    <%= link_to 'Delete', admin_task_submit_path(@task_submit), class: 'mr-2 mb-2 btn btn-outline-danger', method: :delete, data: { confirm: 'Are yous sure?' } %>
                  </div>.

                  <div class="table-responsive">
                    <table class="table table-striped table-lightfont">
                      <tr>
                        <th>ID</th>
                        <td><%= @task_submit.id %></td>
                      </tr>
                      <tr>
                        <th>Status</th>
                        <td><%= TaskSubmit::STATUS_REVERSE[@task_submit.status] %></td>
                      </tr>
                      <tr>
                        <th>Task</th>
                        <td><%= link_to @task_submit.task.name, admin_task_path(@task_submit.task) %></td>
                      </tr>
                      <tr>
                        <th>User</th>
                        <td><%= link_to @task_submit.user.name, admin_user_path(@task_submit.user) %></td>
                      </tr>
                      <tr>
                        <th>Submission</th>
                        <td>
                          <%= image_tag @task_submit.image %>
                        </td>
                      </tr>
                    </table>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>